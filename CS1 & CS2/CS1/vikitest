import random
artists = []
def add():
    artists.append(input("Enter an Artist: "))
add()
add()
add()
while True:
    question = input("What would you like to do? 1. End code 2. Rate current artists.")
    if question == "1":
        break
    elif question == "2":
        random.shuffle(artists)
        print(f"1. {artists[0]}. 2. {artists[1]}. 3. {artists[2]}")
    else:
        print("Enter 1 or 2!")
                
